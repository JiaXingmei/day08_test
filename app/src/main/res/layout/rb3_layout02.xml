<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/rb3_checkbox_shangpin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rb3_text_shangpin"
        android:layout_marginTop="-5dp"
        android:gravity="center" />

    <ImageView
        android:id="@+id/rb3_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@id/rb3_checkbox_shangpin" />

    <TextView
        android:id="@+id/rb3_text_shangpin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rb3_img"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/rb3_img"
        android:gravity="center"
        android:singleLine="true"
        android:text="名称"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/rb3_text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rb3_text_shangpin"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="19dp"
        android:layout_toRightOf="@id/rb3_img"
        android:gravity="center"
        android:singleLine="true"
        android:text="价格"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <com.example.day08_test.bar.AddJianBar
        android:id="@+id/add_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rb3_text_price"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"></com.example.day08_test.bar.AddJianBar>
</RelativeLayout>
