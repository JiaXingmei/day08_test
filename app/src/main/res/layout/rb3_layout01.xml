<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/rb3_checkbox_shangjia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" />


    <TextView
        android:id="@+id/rb3_text_shangjia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="136dp"
        android:layout_toRightOf="@id/rb3_checkbox_shangjia"
        android:gravity="center"
        android:singleLine="true"
        android:text="商家"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rb3_recycler2_shangpin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rb3_text_shangjia"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
